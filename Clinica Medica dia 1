#include "stdio.h"
#include "stdlib.h"
#include "string.h"
#define Max_Medicos 2
#define Max_Pacientes 2
#define Max_Consultas 2

struct Medico
{
	int cod_med[Max_Medicos], telefone[15];
	char nome[50], endereco[100];
	int ativo;
};

struct Paciente
{
	int cod_pac[Max_Pacientes], telefone[15];
	char nome[50], endereco[100];
	int ativo;
};

struct Consulta
{
	int num_consulta[Max_Consultas], hora, cod_med, cod_pac;
	char dia_semana[20];
};

struct Medico medico[Max_Medicos];
struct Paciente paciente[Max_Pacientes];
struct Consulta consulta[Max_Consultas];

void menu();
void cadastrar();
void cadastrar_medico();
void cadastrar_paciente();
void cadastrar_consulta();
void consultas();
void relatorios();
int main(){
	struct Medico medico[Max_Medicos];
	struct Paciente paciente[Max_Pacientes];
	struct Consulta consulta[Max_Consultas];

	menu();
	return 0;
}

void menu(){
	
	int op;
	do{
		system("clear");
		printf("\nBem-Vindo\n");
		printf("\n1 - Cadastros\n2 - Consultas");
		printf("\n3 - Relatorios\n0 - Sair\n");
		scanf("%d", &op);
		
		switch(op){
		  case 1:
		      cadastrar();
		  break;
		  case 2:
		      consultas();
		  break;
		  case 3:
		      relatorios();
		  break;
		}
		
	}while(op!=0);

}
//------------------------------Menu-------------------------------------//
void cadastrar(){
  
  int op;
  do{
  		system("clear");
  		printf("\nMenu de Cadastro\n");
		printf("\n1 - Cadastrar Medico\n2 - Cadastrar Paciente");
		printf("\n3 - Cadastrar Consulta\n0 - Voltar\n");
		scanf("%d", &op);
		getchar();
		
		switch(op){
		  case 1:
		      cadastrar_medico();
		  break;
		  case 2:
		      cadastrar_paciente();
		  break;
		  case 3:
		      cadastrar_consulta();
		  break;
		}
		
		
	}while(op!=0);

}
void consultas(){
  
  int op;
  do{
  		system("clear");
  		printf("\nMenu de Consulta\n");
    	printf("\n[Dia da consulta]\n");
		printf("\n1 - Segunda-Feira\n2 - Terça-Feira\n3 - Quarta-Feira");
		printf("\n4 - Quinta-Feira\n5 - Sexta-Feira\n0 - Voltar\n");
		scanf("%d", &op);
		
	}while(op!=0);

}
void relatorios(){
  
  int op;
  do{
  		system("clear");
    	printf("\nMenu de Relatorio\n");
		printf("\n1 - Relatorio de Segunda-Feira\n2 - Relatorio de Terça-Feira\n3 - Relatorio de Quarta-Feira");
		printf("\n4 - Relatorio de Quinta-Feira\n5 - Relatorio de Sexta-Feira\n0 - Voltar\n");
		scanf("%d", &op);
		
	}while(op!=0);

}
//-------------------------Sub-Menus-------------------------------------//

void cadastrar_medico(){
	system("clear");
	int cod_med[Max_Medicos], telefone[15];
	char nome[50], endereco[100];
	int op;
	do{
		printf("\nNome: ");
		fgets(nome,sizeof(nome),stdin);
		printf("\nEndereço: ");
		fgets(endereco,sizeof(endereco),stdin);
		printf("\nCodigo de Medico: ");
		scanf("%d", &cod_med[Max_Medicos]);
		printf("\nTelefone: ");
		scanf("%d", &telefone[15]);

		for (int i = 0; i < Max_Medicos; ++i)
		{
			if(medico[i].ativo == 0)
			{
				medico[i].cod_med[Max_Medicos] = cod_med[Max_Medicos];
				medico[i].telefone[15] = telefone[15];
				strcpy(medico[i].nome, nome);
				strcpy(medico[i].endereco, endereco);
				break;
			}
		}

		printf("\n1 - Continuar\n0 - Parar\n");
		scanf("%d", &op);
		getchar();
	}while(op!=0);
}
void cadastrar_paciente(){
	system("clear");
	int cod_pac[Max_Pacientes], telefone[15];
	char nome[50], endereco[100];
}
